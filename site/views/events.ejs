<% layout('boilerplate') %>
<% block('title', 'Events'); %>

<div class="starter-template" ng-controller="eventsCtrl"> 
    <h2>Events</h2>
    <hr>

    <div class="row">
        <form class="form-inline" name="saveUserFrom" role="form" ng-submit="saveUser(saveUserFrom)">
            <div class="form-group">        
                <input type="text" class="form-control" placeholder="Name" ng-model="user.name" required="required">
            </div>
            <div class="form-group">       
              <input class="form-control" type="password" placeholder="Password" ng-model="user.password" required="required">        
            </div>
            <div class="form-group">        
                <button type="submit" class="btn btn-default">Add</button>
            </div>
        </form>
    </div><br>




    <div class="row" style="margin-bottom:30px;">
        <select class="form-control" ng-model="eventSortOrder">
            <option value="title">Title</option>
            <option value="-votes">Votes</option>       
        </select>        
    </div>


    
    <div class="row">
        <div class="panel panel-default panel-primary event-width" ng-repeat="event in events | orderBy:eventSortOrder">
            <div class="panel-heading" ng-click="deleteUser(event._id)">{{ event.name | lowercase }}</div>
            <div class="panel-body">
                {{ event._id }}
            </div>
            <div class="panel-footer">
                <span class="glyphicon glyphicon-minus votes-cursor" ng-click="downVote(event)"></span>
                    votes: <span class="badge">{{ event.created | date:'short' }}</span>
                <span class="glyphicon glyphicon-plus votes-cursor" ng-click="upVote(event)"></span>
            </div>
        </div> 
    </div>
    
    
</div>